<%- include("../partials/head") %>
<div class="container">
  <div class="card m-t">
    <div class="card-body">
    <h4><%= users.username %> kullanıcısına rozet ekle</h4>
      <form method="POST" action="/admin/add/user/badge/<%= users._id%>">
        <select class="form-control" name="badges" id="badges">
          <option value="Gelistirici">Geliştirici</option>
          <option value="Admin">Yönetici</option>
          <option value="Kurnaz Ekip Üyesi">Kurnaz Ekip</option>
          <option value="Murt Ekip Üyesi">Murt Ekip</option>
          <option value="Seçkin Çizer">Seçkin Çizer</option>
          <option value="Arkaplan Çizeri">Arkaplan Çizeri</option>
          <option value="Modelci">Modelci</option>
          <option value="Storyborderci">Story borderci</option>
          <option value="Animatör">Animatör</option>
          <option value="Stajyer">Stajer</option>
          <option value="Seslendirmen">Seslendirmen</option>
          <option value="Tasarımcı">Tasarımcı</option>
        </select><br>
          <input type="submit" class="btn btn-dark" value="Rozeti ekle">
      </form>        
    </div>
  </div>
   <label>Kullanıcı rozetleri</label><br>
 <% for(let i=0;i<999;i++) { %>
      <% if(users.badges[i] == "Gelistirici") { %>
        <img id="icon" src="https://cdn.glitch.global/e40803d6-689d-4f0f-be66-debb139801d0/95b99533-2d3f-4bc5-81aa-18e7d3835d79.image.png?v=1659538390283" title="Geliştirici">
      <% } %>
      <% if(users.badges[i] == "Modelci") { %>
        <img id="icon" src="https://cdn.glitch.global/e40803d6-689d-4f0f-be66-debb139801d0/ba9aa8a7-ca7b-4e8c-8a8d-9404973987ad.image.png?v=1659538861536" title="Modelci">
      <% } %>      
      <% if(users.badges[i] == "Arkaplan Çizeri") { %>
